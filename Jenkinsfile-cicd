pipeline {
  agent any

  triggers {
    pollSCM('H/2 * * * *')
  }


  stages {

    stage('Main-Branch') {
      when {
        branch 'main'
      }
      steps {
        script {
          addShortText background: 'yellow', color: 'black', borderColor: 'yellow', text: "${GIT_BRANCH}"
        }
        print "Hello"
        sh 'env'
      }
    }

    stage('Main+Tag') {
      steps {
        print "Two"
      }
    }

  }

  post {
    always {
      cleanWs()
    }
  }

}
